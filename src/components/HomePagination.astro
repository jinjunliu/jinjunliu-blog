---
const { currentPage, totalPages } = Astro.props

const prevPage = currentPage > 1 ? `/page/${currentPage - 1}/` : null
const nextPage =
	currentPage < totalPages ? (currentPage === 1 ? '/page/2/' : `/page/${currentPage + 1}/`) : null
---

<nav class='flex justify-center space-x-4 mt-8'>
	{
		prevPage && (
			<a href={prevPage} class='px-3 py-2 bg-gray-200 text-gray-700 rounded'>
				Previous
			</a>
		)
	}
	<span class='px-3 py-2'>
		Page {currentPage} of {totalPages}
	</span>
	{
		nextPage && (
			<a href={nextPage} class='px-3 py-2 bg-gray-200 text-gray-700 rounded'>
				Next
			</a>
		)
	}
</nav>
